                    <br/>
                </div>
                <div class="form-group row">

                    @if (product != null)
                    {
                        <button type="submit" class="btn btn-danger" asp-action="Remove" asp-route-id="@Model.ProductId" width="100%">Remove from Cart</button>
                        
                    }
                    else
                    {
                        <input type="submit" class="btn bg-primary text-white" value="Add to Cart" width="100%" />
                    }
                   
