@model IEnumerable<ECartOnlineShop.Models.ProductTypes>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container" align="right">

    <a asp-controller="UserProductTypes" asp-action="UserProductsList" class="btn bg-primary text-white" style="width:auto;">Shop Now </a>

</div>

<div class="text-center ">
    <h1 class="display-4 text-primary font-weight-bold">ECart</h1>

    

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/HomePage.png" alt="First slide" style="width:1100px;height:400px;">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/HomeImage3.png" alt="Second slide" style="width:1100px;height:400px;">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/HomeImage2.png" alt="Third slide" style="width:1100px;height:400px;">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<br />
<div>
    <h1 class="text-primary">Categories</h1>

    
</div>

<style>
    .btn {
        width: 75%;
    }
</style>

<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="min-width: 20rem; max-width: 30.5%;">
            <div class="card-header" align="center">
                <h4>@item.ProductType</h4>
            </div>

            <div class="card-img-top" align="center">
                <img src="~/Images/@item.ProductTypeImage" asp-append-version="true" style="align-items:center; width:250px;height:350px;border-radius:5px;border:1px solid #efefef" />
            </div>

            <div class="card-footer text-center">
                <a asp-controller="UserProducts" asp-action="UserProductsByCategory" class="btn bg-primary text-white" asp-route-id="@item.Id">Shop Now</a>
            </div>
        </div>
    }
</div>