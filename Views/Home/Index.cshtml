@model IEnumerable<ECartOnlineShop.Models.ProductTypes>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container" align="right">

    <a asp-controller="UserProductTypes" asp-action="UserProductsList" class="btn bg-primary text-white" style="width:auto;">Shop Now </a>

</div>

<div class="text-center ">
    <h1 class="display-4 text-primary font-weight-bold">ECart</h1>

    <img class="align-self-auto" alt="Image of HomePage" src="~/Images/HomePage.png" style="width:1100px;height:400px;" />
</div>
<br />
<div>
    <h1 class="text-primary">Categories</h1>

    
</div>

<style>
    .btn {
        width: 75%;
    }
</style>

<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="min-width: 20rem; max-width: 30.5%;">
            <div class="card-header" align="center">
                <h4>@item.ProductType</h4>
            </div>

            <div class="card-img-top" align="center">
                <img src="~/Images/@item.ProductTypeImage" asp-append-version="true" style="align-items:center; width:250px;height:350px;border-radius:5px;border:1px solid #efefef" />
            </div>

            <div class="card-footer text-center">
                <a asp-controller="UserProducts" asp-action="UserProductsByCategory" class="btn bg-primary text-white" asp-route-id="@item.Id">Shop Now</a>
            </div>
        </div>
    }
</div>