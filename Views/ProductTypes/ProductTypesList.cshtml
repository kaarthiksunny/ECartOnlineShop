@using ECartOnlineShop.Models;
@model IEnumerable<ProductTypes>
@{
    ViewData["Title"] = "ProductTypesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Types List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; New Product Type</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class=" table-info">
            <th>
                @Html.DisplayNameFor(c => c.ProductType)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductType</td>
                <td>
                    <partial name="ButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

