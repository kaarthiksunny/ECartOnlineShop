@model ECartOnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<h2 class="text-info">Create ProductType</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductType"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductType" class="form-control" />
                </div>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductTypeImage"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ProductTypeImage" class="form-control" type="file" />
                </div>
                <span asp-validation-for="ProductTypeImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a asp-action="ProductTypesList" class="btn btn-success">Back to List</a>
            </div>
        </div>

    </div>
</form>
