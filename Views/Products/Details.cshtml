@model ECartOnlineShop.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Product Details</h2>
<div class="p-4 rounded border row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductId)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductId)
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductName)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductName)
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductPrice)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductPrice)
            </div>
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductDescription)
            </div>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductRating)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductRating)
            </div>
            <span asp-validation-for="ProductRating" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductImage)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductImage)
            </div>
            <span asp-validation-for="ProductImage" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(model => model.ProductCategory)
            </div>
            <div class="col-8">
                @Html.DisplayFor(model => model.ProductCategory)
            </div>
            <span asp-validation-for="ProductCategory" class="text-danger"></span>
        </div>


    </div>

    <div class="col-1"></div>
    <div class="col-3">
        <img src="~/Images/@Model.ProductImage" width="80%" />
    </div>

    <div>
        <div class="form-group">

            <a asp-action="ProductsList" class="btn btn-success">Back to List</a>
        </div>
    </div>
</div>

